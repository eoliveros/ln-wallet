{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "docker-run",
        "label": "docker-run: debug",
        "dependsOn": ["docker-build"],
        "dockerRun": {
          "containerName": "app",
          "image": "app",
          "env": {
            "FLASK_APP": "app.py",
            "FLASK_ENV": "development"
          },
          "volumes": [
            {
              "containerPath": "/app",
              "localPath": "${workspaceFolder}"
            }
          ],
          "ports": [
            {
              "containerPort": 5000,
              "hostPort": 5000
            }
          ]
        },
        "python": {
          "args": ["run", "--host", "0.0.0.0", "--port", "5000"],
          "module": "flask"
        }
      },
      {
        "label": "docker-build",
        "type": "docker-build",
        "dockerBuild": {
          "context": "${workspaceFolder}",
          "dockerfile": "${workspaceFolder}/Dockerfile",
          "tag": "app"
        }
      }
    ]
  }